<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:background="#beffaf">

        <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="14sp"
                    android:text="@string/repos_name"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="14sp"
                    android:text="@string/repos_description"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repos_html_url1"
                    android:layout_alignParentTop="true"
                    android:textSize="14sp"
                    android:text="@string/repos_html_url"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repos_owner1"
                    android:layout_alignParentTop="true"
                    android:textSize="14sp"
                    android:text="@string/repos_owner"
                    />

            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repos_name"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:text="name"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repos_desc"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:text="desc"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repos_html_url"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:text="html_url"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repos_owner"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:text="owner"
                android:singleLine="true" />

        </LinearLayout>


    </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top|right">
            <ImageView
                android:id="@+id/imageForked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/git_fork"
                android:visibility="invisible"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>